{
    "compilerOptions": {
      "target": "ESNext", 
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "types": ["react", "react-dom", "@storybook/react"], 
      "allowJs": false,
      "skipLibCheck": true, 
      "esModuleInterop": true, 
      "strict": true,
      "forceConsistentCasingInFileNames": true, 
